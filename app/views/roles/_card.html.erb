<div class="card mb-3">
  <h2 class="card-header h4">
    Role #<%= role.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Movie</dt>
      <dd><%= role.movie_id %></dd>

      <dt>Actor</dt>
      <dd><%= role.actor_id %></dd>

      <dt>Character name</dt>
      <dd><%= role.character_name %></dd>

      <dt>Description</dt>
      <dd><%= role.description %></dd>

      <dt>Role type</dt>
      <dd><%= role.role_type %></dd>

      <dt>Lead</dt>
      <dd><%= role.lead %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back role, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_role_url(role), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to role, method: :delete, data: { confirm: "Do you really want to delete this role?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(role.updated_at) %> ago
  </div>
</div>
