<% was_validated = role.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(role, html: form_html_options) do |f| %>
  <div class="form-group">
    <% movie_id_class = "form-control" %>
    <% movie_id_was_invalid = role.errors.include?(:movie_id) %>

    <% if was_validated %>
      <% if movie_id_was_invalid %>
        <% movie_id_class << " is-invalid" %>
      <% else %>
        <% movie_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :movie_id %>

    <%= f.number_field :movie_id, class: movie_id_class, placeholder: "Enter movie" %>
    <% if movie_id_was_invalid %>
      <% role.errors.full_messages_for(:movie_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% actor_id_class = "form-control" %>
    <% actor_id_was_invalid = role.errors.include?(:actor_id) %>

    <% if was_validated %>
      <% if actor_id_was_invalid %>
        <% actor_id_class << " is-invalid" %>
      <% else %>
        <% actor_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :actor_id %>

    <%= f.number_field :actor_id, class: actor_id_class, placeholder: "Enter actor" %>
    <% if actor_id_was_invalid %>
      <% role.errors.full_messages_for(:actor_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% character_name_class = "form-control" %>
    <% character_name_was_invalid = role.errors.include?(:character_name) %>

    <% if was_validated %>
      <% if character_name_was_invalid %>
        <% character_name_class << " is-invalid" %>
      <% else %>
        <% character_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :character_name %>

    <%= f.text_field :character_name, class: character_name_class, placeholder: "Enter character name" %>
    <% if character_name_was_invalid %>
      <% role.errors.full_messages_for(:character_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = role.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>

    <%= f.text_area :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% role.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% role_type_class = "form-control" %>
    <% role_type_was_invalid = role.errors.include?(:role_type) %>

    <% if was_validated %>
      <% if role_type_was_invalid %>
        <% role_type_class << " is-invalid" %>
      <% else %>
        <% role_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :role_type %>

    <%= f.number_field :role_type, class: role_type_class, placeholder: "Enter role type" %>
    <% if role_type_was_invalid %>
      <% role.errors.full_messages_for(:role_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
