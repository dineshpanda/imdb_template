<%= form_with(model: @role, local: true) do |f| %>

  <%= f.hidden :movie_id, value: @movie.id %>

  <div class="form-group">
    <%= f.label :actor_id %>
    <%= select_tag(:actor_id, options_from_collection_for_select(Actor.all, :id, :name, @role.actor_id), class: "form-control") %>
  </div>

  <div class="form-group">
    <%= f.label :character_name %>
    <%= f.text_field :character_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3" %>
  </div>

  <div class="form-group">
    <%= f.label :role_type %>
    <%= f.text_field :role_type, class: "form-control" %>
  </div>

  <%= f.submit "Create role", class: "btn btn-block btn-outline-secondary" %>
<% end %>
