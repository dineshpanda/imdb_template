
<form action="/roles">

  <input type="hidden" name="movie_id" value="<%= @movie.id %>">

  <div class="form-group">
    <label for="actor_id">
      Actor
    </label>

        <input type="text" id="actor_id" name="actor_id" class="form-control" value="<%= @role.actor_id %>">
        </div>
  <div class="form-group">
    <label for="character_name">
      Character name
    </label>

        <input type="text" id="character_name" name="character_name" class="form-control" value="<%= @role.character_name %>">
        </div>
    <button class="btn btn-block btn-outline-secondary">
    Create role
  </button>
</form>
