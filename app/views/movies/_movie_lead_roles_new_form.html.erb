<%= form_with(model: @role, local: true) do |f| %>

  <%= f.hidden_field :movie_id, value: @movie.id %>

  <div class="form-group">
    <%= f.label :actor_id %>
    <%= f.select :actor_id, options_from_collection_for_select(Actor.all, :id, :name, @role.actor_id), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :character_name %>
    <%= f.text_field :character_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-check">
    <%= f.check_box :lead, class: "form-check-input" %>
    <%= f.label :lead, class: "form-check-label" %>
  </div>

  <%= f.submit "Create role", class: "btn btn-block btn-outline-secondary" %>
<% end %>
